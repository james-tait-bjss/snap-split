{
  "name": "snap-split",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "init": "cp -r hooks/* .git/hooks && chmod ug+x .git/hooks/*",
    "build:minikube": "eval $(minikube docker-env) && kubectl apply --recursive -f k8s && docker build -t snap-split-server -f Dockerfile.server .",
    "restart:minikube": "npm run build:minikube && kubectl rollout restart deployment/snap-split-server",
    "start": "ts-node src/server.ts",
    "start:dev": "node --watch -r ts-node/register src/server.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:serial": "jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "memfs": "^4.6.0",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "dist/*"
    ]
  }
}
